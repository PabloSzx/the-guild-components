{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "target": "es2018",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "the-guild-components": ["packages/the-guild-components/src/index.tsx"],
      "@theguild/components": ["packages/components/src/index.tsx"]
    },
    "preserveWatchOutput": true
  },
  "include": ["packages"],
  "exclude": ["packages/**/*.stories.tsx", "**/*.styles.tsx"]
}
